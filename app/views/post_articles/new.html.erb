<h1>Create a New Post</h1>

<%= form_with(model: @post_article, local: true) do |form| %>
  <% if @post_article.errors.any? %>
    <div class="errors">
      <h2><%= pluralize(@post_article.errors.count, "error") %> prohibited this post_article from being saved:</h2>
      <ul>
        <% @post_article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

