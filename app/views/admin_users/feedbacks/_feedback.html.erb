<tr data-controller="clickable-row"
    data-url="<%= content_feedback_admin_users_feedback_path(feedback) %>"
    data-action="click->clickable-row#handleClick"
    class="cursor-pointer hover:bg-gray-700 hover:text-white"
>
  <td class="w-0"><%= feedback.id %></td>
  <td><%= feedback.title %></td>
  <td><%= truncate(feedback.description, length: 50, omission: '...') %></td>
  <td class="w-52"><%= feedback.created_at.strftime("%m-%d-%Y, %I:%M %p") %></td>
  <td class="w-52"><%= feedback.updated_at.strftime("%m-%d-%Y, %I:%M %p") %></td>
</tr>
