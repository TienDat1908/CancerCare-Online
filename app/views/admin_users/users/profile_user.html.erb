<div class="flex flex-col w-full bg-white shadow-lg rounded-xl text-white">
  <div class="flex items-center rounded-t-xl p-[24px] <%= @user.gender == 'male' ? 'bg-gradient-to-b from-cyan-950 to-white' : 'bg-gradient-to-b from-red-500 to-white' %>">
    <%= user_avatar(@user) %>
    <div class="ml-5">
      <div class="text-[45px] text-black font-bold"><%= @user&.full_name %></div>
      <div class="text-[20px] text-black">(<%= @user&.nick_name %>)</div>
    </div>
  </div>
  <div class="w-full border border-solid border-[#727272]"></div>
  <div class="flex justify-between pt-[24px] pl-[24px] pr-[24px] pb-0 mb-6">
    <div class="font-bold text-2xl text-black">Name & Date of Birth</div>
    <div class="flex gap-[30px]">
      <div class="text-black border border-solid border-[#727272] rounded-lg p-2">
        <div class="text-[12px]">First Name:</div>
        <div class="text-[18px] font-bold text-center"><%= @user&.first_name %></div>
      </div>
      <div class="text-black border border-solid border-[#727272] rounded-lg p-2">
        <div class="text-[12px]">Last Name:</div>
        <div class="text-[18px] font-bold text-center"><%= @user&.last_name %></div>
      </div>
      <div class="text-black border border-solid border-[#727272] rounded-lg p-2">
        <div class="text-[12px]">Gender:</div>
        <div class="text-[18px] font-bold text-center"><%= @user&.gender %></div>
      </div>
      <div class="text-black border border-solid border-[#727272] rounded-lg p-2">
        <div class="text-[12px]">Date of Birth:</div>
        <div class="text-[18px] font-bold text-center"><%= @user&.date_of_birth&.strftime("%m-%d-%Y") %></div>
      </div>
    </div>
  </div>
  <div class="w-full border border-solid border-[#727272]"></div>
  <div class="flex justify-between pt-[24px] pl-[24px] pr-[24px] pb-0 mb-6">
    <div class="font-bold text-2xl text-black">Email & Phone Number</div>
    <div class="flex gap-[30px]">
      <div class="text-black border border-solid border-[#727272] rounded-lg p-2">
        <div class="text-[12px]">Email:</div>
        <div class="text-[18px] font-bold text-center"><%= @user&.email %></div>
      </div>
      <div class="text-black border border-solid border-[#727272] rounded-lg p-2">
        <div class="text-[12px]">Phone Number:</div>
        <div class="text-[18px] font-bold text-center"><%= @user&.phone_number %></div>
      </div>
    </div>
  </div>
  <div class="w-full border border-solid border-[#727272]"></div>
  <div class="flex justify-between pt-[24px] pl-[24px] pr-[24px] pb-0 mb-6">
    <div class="font-bold text-2xl text-black">Address</div>
    <div class="flex gap-[30px]">
      <div class="text-black border border-solid border-[#727272] rounded-lg p-2">
        <div class="text-[12px]">Street:</div>
        <div class="text-[18px] font-bold text-center"><%= @user&.street %></div>
      </div>
      <div class="text-black border border-solid border-[#727272] rounded-lg p-2">
        <div class="text-[12px]">City:</div>
        <div class="text-[18px] font-bold text-center"><%= @user&.city %></div>
      </div>
      <div class="text-black border border-solid border-[#727272] rounded-lg p-2">
        <div class="text-[12px]">State:</div>
        <div class="text-[18px] font-bold text-center"><%= @user&.state %></div>
      </div>
      <div class="text-black border border-solid border-[#727272] rounded-lg p-2">
        <div class="text-[12px]">Zip:</div>
        <div class="text-[18px] font-bold text-center"><%= @user&.zip %></div>
      </div>
      <div class="text-black border border-solid border-[#727272] rounded-lg p-2">
        <div class="text-[12px]">Country:</div>
        <div class="text-[18px] font-bold text-center"><%= @user&.country %></div>
      </div>
    </div>
  </div>
  <div class="w-full border border-solid border-[#727272]"></div>
  <div class="flex justify-between pt-[24px] pl-[24px] pr-[24px] pb-0 mb-6">
    <div class="font-bold text-2xl text-black">Active</div>
    <div class="flex gap-[30px]">
      <div class="text-black border border-solid border-[#727272] rounded-lg p-2">
        <div class="text-[12px]">Current Sign In At:</div>
        <div class="text-[18px] font-bold text-center"><%= @user&.current_sign_in_at&.strftime("%m-%d-%Y, %I:%M %p") %></div>
      </div>
      <div class="text-black border border-solid border-[#727272] rounded-lg p-2">
        <div class="text-[12px]">Last Sign In At:</div>
        <div  class="text-[18px] font-bold text-center"><%= @user&.last_sign_in_at&.strftime("%m-%d-%Y, %I:%M %p") %></div>
      </div>
      <div class="text-black border border-solid border-[#727272] rounded-lg p-2">
        <div class="text-[12px]">Status:</div>
        <div class="text-[18px] font-bold text-center">
          <%= @user.status ? 'Active' : 'Unactive' %>
        </div>
      </div>
    </div>
  </div>
</div>
